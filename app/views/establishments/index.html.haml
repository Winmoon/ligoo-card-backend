.row-fluid
  .span12
    %h3.page-title
      Estabelecimentos
    %ul.breadcrumb
      %li
        %i.icon-home
        = link_to 'Dashboard', admin_index_path
        %span.icon-angle-right
      %li
        Estabelecimentos
= link_to 'Cadastrar Estabelecimento', new_establishment_path, class: 'btn btn-info'
%br/
%br/
.row-fluid
  .span12
    .widget
      .widget-title
        %h4
          %i.icon-group
          Estabelecimentos
        %span.tools
          %a.icon-refresh{:href => "javascript:location.reload();"}
      .widget-body
        %table#sample_1.table.table-striped.table-bordered
          %thead
            %tr
              %th= t('activerecord.attributes.establishment.name')
              %th= t('activerecord.attributes.establishment.address')
              %th= t('activerecord.attributes.establishment.phone')
              %th= t('activerecord.attributes.establishment.description')
              %th LL
              %th
          %tbody
            - @establishments.each do |establishment|
              %tr.odd.gradeX
                %td= establishment.name
                %td= establishment.address
                %td= establishment.phone
                %td= establishment.description
                %td #{establishment.latitude},#{establishment.longitude}
                %td.actions
                  .btn-group
                    = link_to edit_establishment_path(establishment), class: 'btn', title: 'Editar' do
                      %i.icon-edit
                    = link_to establishment, :method => :delete, :data => { :confirm => t('dialog.confirm') }, class: 'btn', title: 'Exclu√≠r' do
                      %i.icon-remove
