.row-fluid
  .span12
    %h3.page-title
      Novidades
    %ul.breadcrumb
      %li
        %i.icon-home
        = link_to 'Dashboard', establishment_index_path
        %span.icon-angle-right
      %li
        Novidades
= link_to 'Cadastrar Novidade', new_news_path, class: 'btn btn-info'
%br/
%br/
.row-fluid
  .span12
    .widget
      .widget-title
        %h4
          %i.icon-gift
          Novidades
        %span.tools
          %a.icon-refresh{:href => "javascript:location.reload();"}
      .widget-body
        %table#sample_1.table.table-striped.table-bordered
          %thead
            %tr
              %th= t('activerecord.attributes.news.created_at')
              %th= t('activerecord.attributes.news.news')
              %th
          %tbody
            - @news.each do |news|
              %tr.odd.gradeX
                %td= l(news.created_at.to_date, format: :short)
                %td= news.news
                %td.actions
                  .btn-group
                    = link_to edit_news_path(news), class: 'btn', title: 'Editar' do
                      %i.icon-edit
                    = link_to news, :method => :delete, :data => { :confirm => t('dialog.confirm') }, class: 'btn', title: 'ExcluÃ­r' do
                      %i.icon-remove
        = will_paginate @news, :renderer => BootstrapPaginationHelper::LinkRenderer