!!!
%html
  %head
    %meta{:charset => "utf-8"}/
    %title Ligoo Card - Administração
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    = stylesheet_link_tag    "//netdna.bootstrapcdn.com/font-awesome/3.0/css/font-awesome.min.css", media: "all"
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body.fixed-top
    .fb-root
    #logo.center
      = image_tag 'logo.png', class: 'center', alt: "Ligoo Card"
    #login
      %a#facebook_sign_in Sign in with Facebook
      = link_to "Sair", destroy_user_session_path, method: :delete
      - flash.each do |key, msg|
        = msg
      = yield
    #login-copyright
      2013 &copy; Ligoo Card - Administração
    = javascript_include_tag "js/jquery-1.8.3.min.js"
    = javascript_include_tag "bootstrap/js/bootstrap.min.js"
    = javascript_include_tag "js/jquery.blockui.js"
    = javascript_include_tag "js/app.js"
    = javascript_include_tag "facebook"
    = javascript_include_tag "mobile"
    :javascript
      jQuery(document).ready(function() {
        App.initLogin();
      });
