!!!
%html
  %head
    %meta{:charset => "utf-8"}/
    %title Ligoo Card - Administração
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    = stylesheet_link_tag    "//netdna.bootstrapcdn.com/font-awesome/3.0/css/font-awesome.min.css", media: "all"
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body.fixed-top
    / BEGIN HEADER
    #header.navbar.navbar-inverse.navbar-fixed-top
      / BEGIN TOP NAVIGATION BAR
      .navbar-inner
        .container-fluid
          / BEGIN LOGO
          %a.brand{:href => "index.html"}
            = image_tag "logo.png", :alt => "Conquer"
          / END LOGO
          / BEGIN RESPONSIVE MENU TOGGLER
          %a#main_menu_trigger.btn.btn-navbar.collapsed{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
            %span.arrow
          / END RESPONSIVE MENU TOGGLER
          .top-nav
            / BEGIN TOP NAVIGATION MENU
            %ul#top_menu.nav.pull-right
              %li.divider-vertical.hidden-phone.hidden-tablet
              / BEGIN USER LOGIN DROPDOWN
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  %i.icon-user
                  %b.caret
                %ul.dropdown-menu
                  %li
                    %a{:href => "#"}
                      %i.icon-user
                      Nome de Usuario
                  %li.divider
                  %li
                    %a{:href => "login.html"}
                      %i.icon-key
                      Sair
              / END USER LOGIN DROPDOWN
            / END TOP NAVIGATION MENU
      / END TOP NAVIGATION BAR
    / END HEADER
    / BEGIN CONTAINER
    #container.row-fluid
      / BEGIN SIDEBAR
      #sidebar.nav-collapse.collapse
        .sidebar-toggler.hidden-phone
        / BEGIN RESPONSIVE QUICK SEARCH FORM
        / END RESPONSIVE QUICK SEARCH FORM
        / BEGIN SIDEBAR MENU
        %ul
          %li.active
            %a{:href => "index.html"}
              %i.icon-home
              Dashboard
          %li
            = link_to establishments_path do
              %i.icon-group
              Estabelecimentos
          %li
            %a{:href => "clientes.html"}
              %i.icon-group
              Clientes
          %li.has-sub
            %a{:href => "javascript:;"}
              %i.icon-gift
              Promoções
              %span.arrow
            %ul.sub
              %li
                %a{:href => "cartoes.html"} Cartão de Fidelidade
              %li
                %a{:href => "novidades.html"} Novidades
          %li.has-sub
            %a{:href => "javascript:;"}
              %i.icon-signal
              Relatórios
              %span.arrow
            %ul.sub
              %li
                %a{:href => "relatorios.html"} 05/08/2013
              %li
                %a{:href => "relatorios.html"} 10/08/2013
        / END SIDEBAR MENU
      / END SIDEBAR
      / BEGIN PAGE
      #body
        / BEGIN PAGE CONTAINER
        .container-fluid
          - flash.each do |key, msg|
            %br
            .alert{class: "alert-#{key}"}
              = msg
          = yield

    #footer
      2013 &copy; Ligoo Card - Administração
      .span.pull-right
        %span.go-top
          %i.icon-arrow-up
    / END FOOTER
    / BEGIN JAVASCRIPTS
    / Load javascripts at bottom, this will reduce page load time
    %script{:src => "assets/js/jquery-1.8.3.min.js"}
    %script{:src => "assets/bootstrap/js/bootstrap.min.js"}
    %script{:src => "assets/js/jquery.blockui.js"}
    / ie8 fixes
    /[if lt IE 9]
      <script src="assets/js/excanvas.js"></script>
      <script src="assets/js/respond.js"></script>
    %script{:src => "assets/chosen-bootstrap/chosen/chosen.jquery.min.js", :type => "text/javascript"}
    %script{:src => "assets/uniform/jquery.uniform.min.js", :type => "text/javascript"}
    %script{:src => "assets/js/app.js"}
    :javascript
      jQuery(document).ready(function() {
         // initiate layout and plugins
         App.init();
      });
