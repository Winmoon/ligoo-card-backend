= simple_form_for(@promotion, html: { class: 'form-horizontal' }) do |f|
  = f.error_notification
  .inputs

    = f.input :description, input_html: { class: 'span6' }
    = f.input :points, input_html: { class: 'span1' }
    = f.input :valid_until

  .form-actions
    = link_to 'Cancelar', promotions_path, class: 'btn'
    = f.button :submit, class: 'btn btn-success'
